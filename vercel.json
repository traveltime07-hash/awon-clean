{
  "version": 2,
  "rewrites": [
    { "source": "/robots.txt", "destination": "/api/robots.txt" },
    { "source": "/app/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    { "source": "/assets/(.*)", "headers": [
      { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
    ]},
    { "source": "/(.*\\.(?:css|js|svg|png|jpg|jpeg|gif|webp|ico|woff|woff2|ttf|eot|otf))", "headers": [
      { "key": "Cache-Control", "value": "public, max-age=86400" }
    ]},
    { "source": "/(.*\\.html)", "headers": [
      { "key": "Cache-Control", "value": "no-store" }
    ]},
    { "source": "/", "headers": [
      { "key": "Cache-Control", "value": "no-store" }
    ]},

    { "source": "/health.html", "headers": [
      { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
    ]},
    { "source": "/version.html", "headers": [
      { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
    ]},
    { "source": "/select-test.html", "headers": [
      { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
    ]},
    { "source": "/smoke.html", "headers": [
      { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
    ]},
    { "source": "/log-test.html", "headers": [
      { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
    ]},
    { "source": "/error-test.html", "headers": [
      { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
    ]},
    { "source": "/env-dump.html", "headers": [
      { "key": "X-Robots-Tag", "value": "noindex, nofollow, noarchive" }
    ]},

    { "source": "/(.*)", "headers": [
      { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
      { "key": "X-Content-Type-Options", "value": "nosniff" },
      { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
      { "key": "Permissions-Policy", "value": "geolocation=(), camera=(), microphone=(), accelerometer=(), magnetometer=(), gyroscope=(), usb=(), payment=(), screen-wake-lock=(), interest-cohort=()" },
      { "key": "X-DNS-Prefetch-Control", "value": "on" },
      { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains" },
      { "key": "Cross-Origin-Resource-Policy", "value": "same-origin" },
      { "key": "Content-Security-Policy", "value": "default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'self'; img-src 'self' https: data:; script-src 'self'; style-src 'self'; font-src 'self' data:; connect-src 'self' https://api.awonsystem.pl https://*.vercel-insights.com; report-uri /api/csp-report" },
      { "key": "Content-Security-Policy-Report-Only", "value": "default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'self'; img-src 'self' https: data:; script-src 'self'; style-src 'self'; font-src 'self' data:; connect-src 'self' https://api.awonsystem.pl https://*.vercel-insights.com; report-uri /api/csp-report" }
    ]}
  ]
}
